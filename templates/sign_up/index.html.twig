{% extends 'base.html.twig' %}

{% form_theme form _self %}

{% block  form_row %}

<div>
    {{- form_label(form) -}}
    {{- form_errors(form) -}}
    {{- form_widget(form) -}}
    {{- form_help(form) -}}

</div>

{% endblock %}


{% block title %}Hello SignUpController!{% endblock %}


{% block navigation %}{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div id="root"></div>
<div class="blank-space-130"></div>

<main>
    <div class="row">
        <div class="wrapper-form">
            {{form_start(form, {'attr':{'id':'signup_form', 'class':'col s12'}})}}

            <div id="q-1" class="row">
                <div class="center-align">
                    <div class="margin-bottom-35">
                        {{form_label(form.meet, null, {'label_attr' : {'class' : 'big-label'}})}}
                    </div>
                    <div id="user_meet" class="row">
                        {% for child in form.meet %}
                        <div class="col s12 m4 l4 xl4 margin-bottom-35">
                            {{form_widget(child)}}
                            {{form_label(child, null, {'label_attr' : {'class' : 'btn-large', 'tabindex' : '0'}})}}
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div id="q-2">
                <div class="center-align">
                    <div class="margin-bottom-35">
                        {{form_label(form.Gender, null, {'label_attr' : {'class' : 'big-label'}})}}
                    </div>
                    <div id="user_Gender" class="row">
                        {% for child in form.Gender %}
                        <div class="col s12 m4 l4 xl4 margin-bottom-35">
                            {{form_widget(child)}}
                            {{form_label(child, null, {'label_attr' : {'class' : 'btn-large', 'tabindex' : '0'}})}}
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div id="q-3">
                <p class="padding-20-30 bg-pink rounded fit-content white-text">Dans quelle ville habites-tu?</p>
                <div class="row">
                    <div class="input-field">
                        {{form_row(form.city)}}
                    </div>
                </div>
                <div class="row right-align">
                    <button data-id="3" class="waves-effect waves-light btn submit-field">Valider la réponse</button>
                </div>
            </div>

            <div id="q-4">
                <p class="padding-20-30 bg-pink rounded fit-content white-text">Quel est votre prénom?</p>
                <div class="input-field">
                    {{form_row(form.firstname)}}
                </div>
                <div class="row right-align">
                    <button data-id="4" class="waves-effect waves-light btn submit-field">Valider la
                        réponse</button>
                </div>
            </div>
            <div id="q-5">
                <p class="padding-20-30 bg-pink rounded fit-content white-text">Quel est votre adresse mail?</p>
                <div class="input-field">
                    {{form_row(form.email)}}
                </div>
                <div class="row right-align">
                    <button data-id="5" class="waves-effect waves-light btn submit-field">Valider la
                        réponse</button>
                </div>
            </div>
            <div id="q-6">
                <p class="padding-20-30 bg-pink rounded fit-content white-text">Choisissez un mot de passe</p>
                <div class="input-field">
                    {{form_row(form.password)}}
                </div>
                <div class="row right-align">
                    <button data-id="6" class="waves-effect waves-light btn submit-field">Valider la
                        réponse</button>
                </div>
            </div>
            <div id="q-7">
                <p class="padding-20-30 bg-pink rounded fit-content white-text">Choisissez un mot de passe</p>
                <div class="row">
                    {{form_label(form.birthday)}}
                </div>
                {% for select in form.birthday %}
                <div class="input-field col s12 m4 l4">
                    {{form_widget(select, { 'attr': {'class': 'display'} })}}
                </div>
                {% endfor %}
                <div class="row right-align">
                    <button data-id="7" class="waves-effect waves-light btn submit-field">Valider la
                        réponse</button>
                </div>
            </div>
            <div id="q-8">
                <p class="padding-20-30 bg-pink rounded fit-content white-text">Quelle est votre situation
                    relationnelle?</p>
                {% for child in form.inRelationship %}
                <div class="col s12 m4 l4 xl4 margin-bottom-35 right-align">
                    {{form_widget(child, {'attr':{'class':'submit-field','data-id' : '8'}})}}
                    {{form_label(child, null, {'label_attr' : {'class' : 'btn-large-bubble submit-field', 'tabindex' : '0', 'data-id' : '8'}})}}
                </div>
                {% endfor %}
            </div>
            <div id="q-9">
                <p class="padding-20-30 bg-pink rounded fit-content white-text">Que recherchez-vous?</p>
                {% for child in form.relationType %}
                <div class="col s12 m4 l4 xl4 margin-bottom-35 right-align">
                    {{form_widget(child, {'attr':{'class':'submit-field','data-id' : '9'}})}}
                    {{form_label(child, null, {'label_attr' : {'class' : 'btn-large-bubble submit-field', 'tabindex' : '0', 'data-id' : '9'}})}}
                </div>
                {% endfor %}
            </div>
            <div id="q-10">
                <p class="padding-20-30 bg-pink rounded fit-content white-text">Avez-vous des enfants?</p>
                {% for child in form.hasChildren %}
                {{form_widget(child, {'attr':{'class':'submit-field','data-id' : '9'}})}}
                {{form_label(child, null, {'label_attr' : {'class' : 'btn-large-bubble submit-field', 'tabindex' : '0', 'data-id' : '10'}})}}
                {% endfor %}
            </div>
            <div id="q-11">
                <p class="padding-20-30 bg-pink rounded fit-content white-text">Etes-vous un fumeur régulier?</p>
                {{form_row(form.isSmoker)}}
            </div>
            {{form_end(form)}}
        </div>
    </div>
</main>

{% endblock %}