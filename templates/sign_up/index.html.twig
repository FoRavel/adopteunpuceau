{% extends 'base.html.twig' %}

{% form_theme form _self %}

{% block  form_row %}

<div>
    {{- form_label(form) -}}
    {{- form_errors(form) -}}
    {{- form_widget(form) -}}
    {{- form_help(form) -}}

</div>

{% endblock %}


{% block title %}Hello SignUpController!{% endblock %}


{% block navigation %}{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>
<div id="root"></div>
<main>
    <div class="container-form-chat">
        <div class="chat">
            <!-- Dynamic content here -->
        </div>
        <div class="wrapper-form">
            {% include "sign_up/form.html.twig" %}
        </div>
    </div>

</main>

{% endblock %}